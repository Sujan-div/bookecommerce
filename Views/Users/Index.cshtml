@using Microsoft.AspNetCore.Http;




@if (@Context.Session.GetString("role") == "customer")
{
    <!-- Main -->
    <div id="main">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="images/slider-image-1-1920x700.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="images/slider-image-2-1920x700.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="images/slider-image-3-1920x700.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <br>
        <br>

        <div class="inner">
            <!-- About Us -->
            <header id="inner">
                <h1>Find your new book!</h1>

            </header>

            <br>


            <h2 class="h2">Featured Products</h2>

            <!-- Products -->
            @model IEnumerable<bookecommercewebsite.Models.Book>

            @{
                ViewData["Title"] = "Index";
            }



            @*<p>
                    <a asp-action="Create">Create New</a>
                </p>*@
            <div class="row">
                @foreach (var book in Model)
                {
                    <div class="col-4">
                        <div class="card mb-4">
                            <div class="card-header">

                                <img src="~/images/@book.Bookimage" alt="Card Image" height="200" width="120" class="card-img-top" />
                                <label style="font-size:23px;color: steelblue"><b>Name:&nbsp;</b>@book.Bookname</label>
                                <p><b>Author:&nbsp;</b>@book.Bookauthor</p>
                                <p><b>Price:&nbsp;</b>@book.Bookprice</p>
                                <p><b>Category:&nbsp;</b>@book.Bookcatname</p>

                                <a asp-action="Details" asp-route-id="@book.Bookid">Details</a>

                            </div>
                        </div>
                    </div>
                }
            </div>








            <br>







        </div>
    </div>

    <!-- Footer -->
    <footer id="footer">
        <div class="inner">
            <section>
                <a asp-controller="contact" asp-action="Create">Contact Us</a>

            </section>


            <ul class="copyright">
                <li>Copyright © 2020 Company Name </li>
                <li>Template by: <a href="https://www.phpjabbers.com/">PHPJabbers.com</a></li>
            </ul>
        </div>
    </footer>
}
